{
  "manifest_version": 3,
  "name": "MyBroadband Super Filter",
  "version": "2.1",
  "description": "Block Threads, Sections, and Users on MyBroadband.",
  "permissions": ["storage"],
  "icons": {
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://mybroadband.co.za/forum/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
